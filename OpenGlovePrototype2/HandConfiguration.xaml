<Window x:Class="OpenGlovePrototype2.HandConfiguration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenGlovePrototype2"
        mc:Ignorable="d"
        Title="HandConfiguration" Height="354.628" Width="303.624" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF00B47F">

        <Button x:Name="buttonFlexors" Content="Flexors " HorizontalAlignment="Left" Margin="22,87,0,0" VerticalAlignment="Top" Width="250" Height="60" Grid.Column="0" Click="buttonFlexors_Click" FontSize="23"/>
        <Button x:Name="buttonVibeBoards" Content="Vibe Boards" HorizontalAlignment="Left" Margin="22,152,0,0" VerticalAlignment="Top" Width="250" Height="60" Click="buttonVibeBoards_Click" FontSize="23"/>
        <Button x:Name="buttonIMU" Content="IMU" HorizontalAlignment="Left" Margin="22,217,0,0" VerticalAlignment="Top" Width="250" Height="60" Click="buttonIMU_Click" FontSize="23"/>
        <Menu x:Name="menu" HorizontalAlignment="Right" Height="26" VerticalAlignment="Top" Width="298" Background="Black">
            <Separator  Width="20"/>
            <MenuItem x:Name="OpenConfigMenuItem" Header="Open Config" Height="26" Width="75" HorizontalAlignment="Center"  Foreground="White" Background="Black" BorderBrush="Black" Click="openButton_Click"/>
            <Separator Width="30"/>
            <MenuItem x:Name="SaveConfigMenuItem" Header="Save Config" Height="26" Width="75" HorizontalAlignment="Center"  Foreground="White" Background="Black" BorderBrush="Black" Click="saveButton_Click"/>
        </Menu>
        <Label x:Name="MenuTittle" Content="Glove Configuration" HorizontalAlignment="Left" Margin="19,26,0,0" VerticalAlignment="Top" FontSize="28" Foreground="White" Width="269"/>
        <StatusBar HorizontalAlignment="Left" Height="30" Margin="0,296,0,0" VerticalAlignment="Top" Width="298" Background="#FFA8A8A8">
            <StatusBarItem x:Name="statusBarItemProfileLabel" Content="Actual Config :" Height="24" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" Width="89" HorizontalAlignment="Left" BorderThickness="5,0,0,0"/>
            <StatusBarItem x:Name="statusBarItemProfile" Content="None" Height="24" VerticalAlignment="Top" Width="224" HorizontalAlignment="Left" Foreground="White" Background="{x:Null}"/>
        </StatusBar>

    </Grid>
</Window>
